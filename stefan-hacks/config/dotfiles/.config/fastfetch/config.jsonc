{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "source": "$HOME/Pictures/orange_hacker.png", // Absolute path to your image
        "type": "auto",                     // Automatically detects kitty, sixel, iterm, etc.
        "height": 25,                       // Height in terminal character cells
        // "width": 36,                        // Width in terminal character cells
        "preserveAspectRatio": true,        // Prevents stretching if dimensions change
        "position": "left",                 // Options: left, right, top, bottom
        "padding": {
            "top": 2,                       // Vertical offset from the top
            "left": 1,                      // Horizontal offset from the left edge
            "right": 4                      // Space between the logo and text
        }
//     },
//     "display": {
//         "separator": " ➜  "
//     },
//     "modules": [
//         "title",
//         "separator",
//         "os",
//         "host",
//         "kernel",
//         "uptime",
//         "packages",
//         "shell",
//         "terminal",
//         "cpu",
//         "gpu",
//         "memory",
//         "break",
//         "colors"
//     ]
// }
  },
    "display": {
        "color": {
            "keys": "bright_white"
        },
        "separator": "",
        "constants": [
            "──────────────────────────────────────────────────────",   // {$1} - horizontal line for borders
            "\u001b[55D",                                               // {$2} - move cursor left 55 columns
            "\u001b[55C",                                               // {$3} - move cursor right 55 columns
            "\u001b[54C"                                                // {$4} - move cursor right 54 columns
        ],
        "brightColor": true
    },
    "modules": [
        "break",
        {
            "type": "version",
            "key": "┌────────────┬─{$1}┐\u001b[39D",
            "format": "\u001b[1m{#keys} {1} - {2} "
        },
        {
            "type": "os",
            "key": "│  \u001b[s{sysname}\u001b[u\u001b[10C│{$3}│{$2}"
        },
        {
            "type": "kernel",
            "key": "│  \u001b[sKernel\u001b[u\u001b[10C│{$3}│{$2}"
        },
        {
            "type": "datetime",
            "key": "│  Fetched   │{$3}│{$2}",
            "format": "{day-pretty}-{month-pretty}-{year} {hour-pretty}:{minute-pretty}:{second-pretty} {timezone-name}"
        },
        {
            "type": "locale",
            "key": "│  Locale    │{$3}│{$2}"
        },
        {
            "type": "custom",
            "key": "├────────────┴─{$1}┤",                // Bottom border of the entire layout
            "format": ""
        },

        // Hardware section with cyan color theme
        {
            "type": "custom",
            "key": "│{#white}┌───────────┬{$1}┐{#keys}│\u001b[35D",
            "format": "{#bright_white} Hardware "
        },
        {
            "type": "board",
            "key": "│{#white}│ Board     │{$4}│{#keys}│{$2}"
        },
        {
            "type": "chassis",
            "key": "│{#white}│ Chassis   │{$4}│{#keys}│{$2}"
        },
        {
            "type": "cpu",
            "key": "│{#white}│ CPU       │{$4}│{#keys}│{$2}",
            "format": "{name} @{freq-max}",
            "showPeCoreCount": false
        },
        {
            "type": "gpu",
            "key": "│{#white}│ GPU       │{$4}│{#keys}│{$2}"
        },
        {
            "type": "memory",
            "key": "│{#white}│ RAM       │{$4}│{#keys}│{$2}",
            // "keyColor": "34",
            "percent": {
                "type": 3, // 3 = show number + bar + percentage
                "green": 30, // <30% is green
                "yellow": 70 // 30-70% is yellow, >70% is red
            }
        },
        {
            "type": "swap",
            "key": "│{#white}│ SWAP      │{$4}│{#keys}│{$2}",
            // "keyColor": "34",
            "percent": {
                "type": 3, // 3 = show number + bar + percentage
                "green": 30, // <30% is green
                "yellow": 70 // 30-70% is yellow, >70% is red
            }
        },
        {
            "type": "disk",
            "key": "│{#white}│ SSD       │{$4}│{#keys}│{$2}",
            // "keyColor": "34",
            "percent": {
                "type": 3, // 3 = show number + bar + percentage
                "green": 30, // <30% is green
                "yellow": 70 // 30-70% is yellow, >70% is red
            },
        },
        {
            "type": "battery",
            "key": "│{#white}│ Battery   │{$4}│{#keys}│{$2}"
        },
        {
            "type": "custom",
            "key": "│{#white}└───────────┴{$1}┘{#keys}│",
            "format": ""
        },

        // Desktop section with green color theme
        {
            "type": "custom",
            "key": "│{#white}┌───────────┬{$1}┐{#keys}│\u001b[35D",
            "format": "{#bright_white} Desktop "
        },
        {
            "type": "de",
            "key": "│{#white}│ Desktop   │{$4}│{#keys}│{$2}"
        },
        {
            "type": "wm",
            "key": "│{#white}│ Session   │{$4}│{#keys}│{$2}"
        },
        {
            "type": "theme",
            "key": "│{#white}│ Theme     │{$4}│{#keys}│{$2}",
            "format": "{1}"
        },
        {
            "type": "icons",
            "key": "│{#white}│ Icons Set │{$4}│{#keys}│{$2}"
        },
        {
            "type": "font",
            "key": "│{#white}│ Font      │{$4}│{#keys}│{$2}"
        },
        {
            "type": "cursor",
            "key": "│{#white}│ Cursor    │{$4}│{#keys}│{$2}"
        },
        {
            "type": "lm",
            "key": "│{#white}│ LoginMgr  │{$4}│{#keys}│{$2}"
        },
        {
            "type": "bootmgr",
            "key": "│{#white}│ BootMgr   │{$4}│{#keys}│{$2}"
        },
        {
            "type": "display",
            "key": "│{#white}│ Display   │{$4}│{#keys}│{$2}",
            "compactType": "original-with-refresh-rate"
        },
         {
             "type": "gpu",
             "key": "│{#white}│ Driver    │{$4}│{#keys}│{$2}",
             "format": "{driver}"
         },
        {
            "type": "sound",
            "key": "│{#white}│ Sound     │{$4}│{#keys}│{$2}"
        },
        {
            "type": "custom",
            "key": "│{#white}└───────────┴{$1}┘{#keys}│",
            "format": ""
        },

        // Terminal section with yellow color theme
        {
            "type": "custom",
            "key": "│{#white}┌───────────┬{$1}┐{#keys}│\u001b[35D",
            "format": "{#bright_white} Terminal "
        },
        {
            "type": "shell",
            "key": "│{#white}│ Shell     │{$4}│{#keys}│{$2}"
        },
        {
            "type": "terminal",
            "key": "│{#white}│ Terminal  │{$4}│{#keys}│{$2}"
        },
        {
            "type": "terminalfont",
            "key": "│{#white}│ Term Font │{$4}│{#keys}│{$2}"
        },
        // {
        //     "type": "terminaltheme",
        //     "key": "│{#white}│ Colors    │{$4}│{#keys}│{$2}"
        // },
        {
            "type": "packages",
            "key": "│{#white}│ Packages  │{$4}│{#keys}│{$2}"
        },
        {
            "type": "custom",
            "key": "│{#white}└───────────┴{$1}┘{#keys}│",
            "format": ""
        },

        {
            "type": "custom",
            "key": "│{#white}┌───────────┬{$1}┐{#keys}│\u001b[34D",
            "format": "{#bright_white} Uptime "
        },
        {
            "type": "uptime",
            "key": "│{#white}│ Uptime    │{$4}│{#keys}│{$2}"
        },
        {
            "condition": {                                    // Conditional module: only show on non-macOS
                "!system": "macOS"
            },
            "type": "disk",
            "key": "│{#white}│ OS Age    │{$4}│{#keys}│{$2}",
            "folders": "/",                                   // Check root filesystem
            "format": "{create-time:10} [{days} days]"        // Show creation time and age in days
        },
        {
            "condition": {                                    // Conditional module: only show on macOS
                "system": "macOS"
            },
            "type": "disk",
            "key": "│{#white}│ OS Age    │{$4}│{#keys}│{$2}",
            "folders": "/System/Volumes/VM",                 // Work around for APFS on macOS
            "format": "{create-time:10} [{days} days]"
        },
        {
            "type": "users",
            "myselfOnly": true,                               // Only show current user
            "key": "│{#white}│ Login     │{$4}│{#keys}│{$2}"
        },
        {
            "type": "custom",
            "key": "│{#white}└───────────┴{$1}┘{#keys}│",
            "format": ""
        },
        {
            "type": "custom",
            "key": "│ {$3}            │{$2}",
            "format":"{#37}󰮯 {#37} • {#37}• {#37}• {#31} 󰊠 {#32} 󰊠 {#33} 󰊠 {#34} 󰊠 {#35} 󰊠 {#36} 󰊠"
            // "format":"{#37}󰮯 {#31} 󰧞 {#32} 󰧞 {#33} 󰧞 {#36} 󰊠 {#35} 󰊠 {#34} 󰊠 {#33} 󰊠 {#32} 󰊠 {#31} 󰊠 "
        },
        {
            "type": "custom",
            "key": "└──────────────{$1}┘",                // Bottom border of the entire layout
            "format": ""
        },

        // End with color palette and line break
        // "break",                                             // Add a blank line
        //"colors"                                             // Display color palette

        "break",
    ]
}
